@using oshhona.BusinesLogic.DTOs.CategoryDtos

@model PageModel<CategoryDto>

<div class="col-sm-12">
    <div class="mt-5 bg-secondary rounded h-100 p-4">
        <div class="d-flex justify-content-between align-items-center me-3">
            <h3 class="mb-4">Categories Table</h3>
            <div class="d-flex justify-content-between align-items-center me-3">
                <a>New</a>
                <a asp-controller="categories" asp-action="add" class="btn btn-lg btn-lg-square btn-primary m-2"><i class="bi bi-folder-plus"></i></a>
            </div>
            
        </div>
            @if (Model.Items.Any())
            {
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">ID</th>
                        <th scope="col">Full Name</th>
                        <th scope="col">Photo</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model.Items)
                    {
                        <tr>
                            <th scope="row" class="flex items-center px-6 py-4 text-gray-900 whitespace-nowrap dark:text-white">
                                <img class="w-10 h-10 rounded-full" src="~/assets/img/admin.jpg" alt="Jese image">
                                <div class="ps-3">
                                    <div class="text-base font-semibold">Neil Sims</div>
                                </div>
                            </th>
                            <th scope="row">1</th>
                            <td>@category.Id</td>
                            <td>@category.Name</td>
                            <td>@category.ImagePath</td>
                        </tr>
                    }
                </tbody>
            </table>
            }
            else
            {
            <div class="mt-5">
                <i class="bi bi-database-fill-exclamation"></i><a>Category is empty</a>
            </div>
                
            }
    </div>
</div>
