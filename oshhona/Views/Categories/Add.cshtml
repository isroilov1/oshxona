@model AddCategoryDto

<div class="d-flex justify-content-center mt-3">
<div class="col-sm-12 mt-5" style="width: 800px">
    <a asp-controller="categories" asp-action="index" type="button" class="btn btn-outline-primary m-2"><i class="bi bi-skip-backward-fill"></i> Orqaga</a>
        <div class="bg-secondary rounded h-97 p-4" style="border: double; border-color: red">
            
        <h2 style="border: 2px; color: red" class="mb-4">Create Category</h2>
        <form asp-controller="categories" asp-action="add" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Name</label>
                <input asp-for="Name" type="text" class="form-control">
            </div>
            <div class="mb-3">
                <label for="formFile" class="form-label">Photo</label>
                <input asp-for="file" style="cursor: pointer" class="form-control bg-dark" type="file" id="formFile">
            </div>
            <br/>
                <button style="width: 150px; justify-content: center" type="submit" class="btn btn-primary">Create</button>
        </form>
    </div>
</div>
</div>
