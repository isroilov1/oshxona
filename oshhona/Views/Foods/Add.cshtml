@model AddFoodDto

<div class="d-flex justify-content-center mt-3">
<div class="col-sm-12 mt-1" style="width: 800px">
        <a asp-controller="foods" asp-action="index" type="button" class="btn btn-outline-primary"><i class="bi bi-skip-backward-fill"></i> Back</a>
        <div class="bg-secondary rounded h-97 p-4" style="border: double; border-color: red">
            
        <h2 style="border: 2px; color: red" class="mb-4">Create food</h2>
        <form asp-controller="foods" asp-action="add" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label">Name</label>
                <input asp-for="Name" type="text" class="form-control">
            </div>
            <div class="mb-3">
                <label class="form-label">Description</label>
                <input asp-for="Description" type="text" class="form-control">
            </div>
            <div class="mb-3">
                <label class="form-label">Price</label>
                <input asp-for="Price" type="text" class="form-control">
            </div>
            <div class="mb-3">
                <label for="formFile" class="form-label">Photo</label>
                <input asp-for="file" style="cursor: pointer" class="form-control bg-dark" type="file" id="formFile">
            </div>
            <label class="form-label">Food Type</label>
            <select asp-for=FoodTypeId class="form-select mb-3" aria-label="Default select example" required>
                
                @foreach (var food in Model.FoodTypes)
                {
                    if(food.Id == Model.FoodTypeId)
                    {
                            <option selected value="@food.Id">@food.Name</option>
                    }
                    else
                    {
                            <option value="@food.Id">@food.Name</option>
                    }

                }
            </select>
            <span asp-validation-for="FoodTypeId" class="text-danger"></span>

            <br/>
                <button style="width: 150px; justify-content: center" type="submit" class="btn btn-primary">Create</button>
        </form>
    </div>
</div>
</div>
