@model AddFoodTypeDto

<div class="d-flex justify-content-center mt-3">
<div class="col-sm-12 mt-5" style="width: 800px">
    <a asp-controller="foodtype" asp-action="index" type="button" class="btn btn-outline-primary"><i class="bi bi-skip-backward-fill"></i> Back</a>
        <div class="bg-secondary rounded h-97 p-4" style="border: double; border-color: red">
        <h2 style="border: 2px; color: red" class="mb-4">Create Food Type</h2>
        <form asp-controller="foodtype" asp-action="add" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label">Name</label>
                <input asp-for="Name" type="text" class="form-control">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="formFile" class="form-label">Photo</label>
                <input asp-for="file" style="cursor: pointer" class="form-control bg-dark" type="file" id="formFile">
                <span asp-validation-for="file" class="text-danger"></span>
            </div>
            <label class="form-label">Category</label>
            <select asp-for=CategoryId class="form-select mb-3" aria-label="Default select example">
                <option selected> -- Select Category -- </option>
                @foreach (var category in Model.Categories)
                {
                        <option value="@category.Id">@category.Name</option>
                }
            </select>
            <br/>
                <button style="width: 150px; justify-content: center" type="submit" class="btn btn-primary">Create</button>
        </form>
    </div>
</div>
</div>
